<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')  %> 


<body>

    <%- include('./partials/header') %> 
    <main>



      
        
      <section class="contenedor">
        <% for( let i=0; i < category.length; i++ ) { %>
          <div class="caja">
          <a href="/products/filter/<%= category[i].id %>" class="category_item"
            title="<%= category[i].name %>">
            <img src="/images/logos-categorias/<%= category[i].image %> " alt="">
          </a>
          </div>
          <% } %>
        </section>
        <% if (products.length > 0) { %>
            <div class="flex-contenedor">
              <% products.forEach(({id,brand_id,name,categories_id,description,discount,price,images})=> { %>
                  <div class="el-wrapper">
                    <div class="box-up">
                      <img class="img" src="/images/product-images/<%= images.length ? images[0].name : 'default.png' %> " alt="" width="50%"
                      height="50%">
                      <div class="img-info">
                        <div class="info-inner">
                          <span class="p-name">
                            <%= name %>
                          </span>
                          <span class="p-company">
                            <%= products.brand %>
                          </span>
                        </div>
      
                      </div>
                    </div>
      
                    <div class="box-down <%= id%>">
                      <div class="h-bg">
                        <div class="h-bg-inner"></div>
                      </div>
      
                      
                       
              <span class="price">$<%= new Intl.NumberFormat().format(Math.trunc((price) - (price * discount / 100))) %>
              </span>
              <span class="go-description">
                <a class="txt" href="/products/detail/<%= id%>"><span class="txt">VER-PRODUCTO</span></a>
              </span>

            </div>
          </div>
                  <% }) %>
              </div>
        <% } else {%>
          <div class="alerta"> <h1>No se encontró la busquedá:</h1> <p class="alerta-keywords"><%= keywords%></p> </div>
          <br>
            <br>
            <% } %>
    
    </main>
</body>
<%- include('./partials/footer') %> 
</html>